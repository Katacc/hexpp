{
  "version": 2,
  "configurePresets": [
    {
      "name": "default",
      "inherits": "vcpkg",
      "environment": {
        "VCPKG_ROOT": "$env{HOME}/vcpkg",
        "CC": "$env{C_COMPILER_PATH}",
        "CXX": "$env{CXX_COMPILER_PATH}"
      }
    },
    {
      "name": "gcc",
      "inherits": "vcpkg",
      "environment": {
        "VCPKG_ROOT": "$env{HOME}/vcpkg",
        "CC": "gcc",
        "CXX": "g++"
      }
    },
    {
      "name": "clang",
      "inherits": "vcpkg",
      "environment": {
        "VCPKG_ROOT": "$env{HOME}/vcpkg",
        "CC": "clang",
        "CXX": "clang++"
      }
    }
  ]
}
